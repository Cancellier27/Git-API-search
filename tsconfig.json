{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "isolatedModules": true,
    "outDir": "./out",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": false
  },
  "include": ["src/**/*", "index.ts"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
